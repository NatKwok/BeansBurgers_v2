    }
    button{
    padding: 1.5% 9% 1.5% 9%;
    margin-left: 5%; 
    border-radius: 20px;
    border: none;
    font-size: 200%;
    font-weight: 600;
    letter-spacing: 2px;
    color: white;
    text-shadow: 0px 0px 1px white;
    background-image: linear-gradient(transparent, transparent, transparent);
    box-shadow: 0px 0px 1px 1px white;
    }
    a{
        text-decoration: none;
    }

    .userInput{
