@page "{id:int}"
@model BeansBurgers_v2.Pages.CustomizeModel 
@{ ViewData["Title"] = "Customize"; 

} 
<style>
    ul {
        list-style-type: none;
    }
    h1, a, p, h3, hr, label {
        color: white;
    }
    button{
    padding: 1.5% 9% 1.5% 9%; 
    border-radius: 20px;
    border: none;
    font-size: 200%;
    font-weight: 600;
    letter-spacing: 2px;
    color: white;
    text-shadow: 0px 0px 1px white;
    background-image: linear-gradient(orange, rgb(225, 122, 20));
    }
    a{
        text-decoration: none;
    }
    .nope{
        background-image: none;
        background-color: transparent;
        border: none;
        color: red;
    }
    
    .col-sm-2{
        background-image: radial-gradient(transparent, transparent, rgb(53, 53, 53));
        margin: 5px;
        border-radius: 5px;
        box-shadow: 0px 0px 1px 1px orange;
    }
</style>

<div>
 @* <h1>Customize your Burger: @Model.MenuItem.Name</h1> *@
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Cart </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <ul id="cart"> 
        
        @foreach (var product in Model.OrderItems) { <li>
          <table width="100%">
            <tr>
              <td width="50%"> @product.CustomBurger </td>
              <td width="25%"> $@string.Format("{0:0.00}", product.BurgerPrice) </td>
              <td width="25%"> Del btn </td>
            </tr>
          </table>
        </li> } </ul>
      <a class="btn btn-sm btn-danger order-button float-right" title="Check out" asp-page="/Menu">Checkout</a>
    </div>
  </div>
  <form method="post" asp-asp-page="/Customize"> 
    <input type="hidden" asp-for="MenuItem.Id"/>
     <div id="productsWrapper" class="row"> 
        
 <div>
                    <h1> Buns </h1>
                    <hr/>
                </div>

     @foreach (var buns in System.Enum.GetValues(typeof(BeansBurgers_v2.Models.BunsEnum)))
     {
        <label class="col-sm-2" asp-for="Buns">@buns</label>
        <input type="radio" asp-for="Buns" value="@buns"/>
       
     }
      <div>
                    <h1> Patties </h1>
                    <hr/>
                </div>
          @foreach (var patties in System.Enum.GetValues(typeof(BeansBurgers_v2.Models.PattiesEnum)))
     {
        <label class="col-sm-2" asp-for="Patties">@patties</label>
        <input type="radio" asp-for="Patties" value="@patties"/>
     }
      <div>
                    <h1> Toppings </h1>
                    <hr/>
                </div>

          @foreach (var toppings in System.Enum.GetValues(typeof(BeansBurgers_v2.Models.ToppingsEnum)))
     {
        <label class="col-sm-2" asp-for="Toppings">@toppings</label>
        <input type="radio" asp-for="Toppings" value="@toppings"/>
     }
      <div>
                    <h1> Cheese </h1>
                    <hr/>
                </div>
          @foreach (var cheese in System.Enum.GetValues(typeof(BeansBurgers_v2.Models.CheeseEnum)))
     {
        <label class="col-sm-2" asp-for="Cheese">@cheese</label>
        <input type="radio" asp-for="Cheese" value="@cheese"/>
     }
      <div>
                    <h1> Sauces </h1>
                    <hr/>
                </div>
          @foreach (var sauce in System.Enum.GetValues(typeof(BeansBurgers_v2.Models.SauceEnum)))
     {
        <label class="col-sm-2" asp-for="Sauce">@sauce</label>
        <input type="radio" asp-for="Sauce" value="@sauce"/>
     }
     
     </div>

         <button class="btn btn-sm btn-danger order-button float-right" type="submit" asp-for="MenuItem.Id" value="@Model.MenuItem.Id">Payment</button>

  </form>
</div> 
