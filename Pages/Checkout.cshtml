@page
@model BeansBurgers_v2.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<style>
    ul {
        list-style-type: none;
        color: white;
    }
    h1,h2, a, p, h3, hr {
        color: white;
    }
    button{
    padding: 1.5% 9% 1.5% 9%; 
    border-radius: 20px;
    border: none;
    font-size: 200%;
    font-weight: 600;
    letter-spacing: 2px;
    color: white;
    text-shadow: 0px 0px 1px white;
    background-image: linear-gradient(transparent, transparent, transparent));
    box-shadow: 0px 0px 1px 1px white;
    }
    a{
        text-decoration: none;
    }
    .nope{
        background-image: none;
        background-color: transparent;
        border: none;
        color: red;
        padding: none;
        margin: none;
    }
    
    .col-sm-2{
        background-image: radial-gradient(transparent, transparent, rgb(53, 53, 53));
        margin: 5px;
        border-radius: 5px;
        box-shadow: 0px 0px 1px 1px orange;
    }
</style>
<div class="column is-9">
    <form method="post">
        <h1>Checkout</h1>
        <h2>Finalize your Order here</h2>
        <ul id="cart">
            @foreach (var product in Model.OrderItems)
            {
                <li>
                    <div class="columns">
                        <div class="column" style="text-align: left">
                            @product.CustomBurger
                        </div>
                        <div class="column" style="text-align: left">
                            $@string.Format("{0:0.00}", @product.BurgerPrice)
                        </div>
                        <div class="column" style="text-align: left">
                            @product.Quantity
                        </div>
                    </div>
                </li>
            }
        </ul>
        <p>Total Items: @Model.OrderDetails.totalItems</p>
        <p>Total Price:$@string.Format("{0:0.00}", @Model.OrderDetails.totalPrice)</p>

        <p>Total Tax: $@string.Format("{0:0.00}", @Model.OrderDetails.totalTax)</p>

        <p>Grand Total: $@string.Format("{0:0.00}", @Model.OrderDetails.grandTotal)</p>


        <button class="btn btn-sm text-white order-button float-left" name="Checkout" type="submit" >Place Order</button>

    </form>
    <div>

    <a asp-page="/Menu"><button class="btn btn-sm text-white order-button float-left">Back to Menu</button></a>

    </div>

</div>