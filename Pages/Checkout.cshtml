@page
@model BeansBurgers_v2.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<style>
    ul {
        list-style-type: none;
        color: white;
    }
    h1,h2, a, p, h3, hr {
        color: white;
    }
    button{
    padding: 1.5% 9% 1.5% 9%; 
    border-radius: 20px;
    border: none;
    font-size: 200%;
    font-weight: 600;
    letter-spacing: 2px;
    color: white;
    text-shadow: 0px 0px 1px white;
    background-image: linear-gradient(orange, rgb(225, 122, 20));
    }
    a{
        text-decoration: none;
    }
    .nope{
        background-image: none;
        background-color: transparent;
        border: none;
        color: red;
        padding: none;
        margin: none;
    }
    
    .col-sm-2{
        background-image: radial-gradient(transparent, transparent, rgb(53, 53, 53));
        margin: 5px;
        border-radius: 5px;
        box-shadow: 0px 0px 1px 1px orange;
    }
</style>
<div class="column is-9">
    <form method="post">
        <h1>Checkout</h1>
        <h2>Finalize your Order here</h2>
        <ul id="cart">
            @foreach (var product in Model.OrderItems)
            {
                <li>
                    <div class="columns">

                        <div class="column" style="text-align: left">
                            @product.CustomBurger
                        </div>
                        <div class="column" style="text-align: left">
                             $@string.Format("{0:0.00}", @product.BurgerPrice)
                        </div>
                        
                    </div>
                </li>
                        
            }
        </ul>

        <button class="btn btn-sm btn-danger order-button float-left" name="Checkout" type="submit" >Checkout</button>

    </form>
    <div>

    <a asp-page="/Menu"><button class="btn btn-sm btn-danger order-button float-left">Back to Menu</button></a>

    </div>

</div>